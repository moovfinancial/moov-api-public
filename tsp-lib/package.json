{
  "name": "@moovfinancial/tsp-lib",
  "version": "0.1.0",
  "type": "module",
  "main": "dist/src/index.js",
  "tspMain": "lib/main.tsp",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    },
    "./testing": {
      "types": "./dist/src/testing/index.d.ts",
      "default": "./dist/src/testing/index.js"
    }
  },
  "dependencies": {
    "@typespec/compiler": "0.66.0"
  },
  "devDependencies": {
    "@types/node": "22.13.10",
    "@typescript-eslint/eslint-plugin": "8.26.0",
    "@typescript-eslint/parser": "8.26.0",
    "@typespec/library-linter": "0.66.0",
    "eslint": "9.22.0",
    "prettier": "3.5.3",
    "typescript": "5.8.2",
    "typescript-eslint": "8.26.0",
    "vitest": "3.0.8"
  },
  "scripts": {
    "build": "npm run clean && tsc && npm run build:tsp",
    "clean": "rm -rf dist",
    "watch": "tsc --watch --no-emit",
    "build:tsp": "tsp compile . --warn-as-error --import @typespec/library-linter",
    "test": "vitest",
    "lint": "eslint src/ test/ --report-unused-disable-directives --max-warnings=0",
    "lint:fix": "eslint . --report-unused-disable-directives --fix",
    "format": "prettier .  --write",
    "format:check": "prettier --check ."
  },
  "private": true
}
